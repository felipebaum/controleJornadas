@page
@model controleJornadas.Pages.FuncionariosCrud.DeleteModel

@{
    ViewData["Title"] = "Excluir funcionário";
    Layout = "_Layout";
}


<h3>Tem certeza que deseja excluir o funcionário @Model.funcionarios.Nome ?</h3>
<div class="row" style="justify-content: center;">
    <hr />
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="funcionarios.Nome" class="control-label"></label>
            <input asp-for="funcionarios.Nome" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="funcionarios.Cargo" class="control-label"></label>
            <input asp-for="funcionarios.Cargo" class="form-control" readonly />
        </div>
        <div class="forn-group">
            <label asp-for="funcionarios.DataAdmissao" class="control-label"></label>
            <input asp-for="funcionarios.DataAdmissao" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="funcionarios.CodPix" class="control-label"></label>
            <input asp-for="funcionarios.CodPix" class="form-control" readonly />
        </div>
        <br>

        <form method="post">
        <input type="hidden" asp-for="funcionarios.Id" />
        <div class="form-group" style="display: flex;justify-content: space-between;">
            <input type="submit" value="Excluir Funcionário" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-page="Index">Voltar</a>
        </div>
    </form>
    </div>
</div>
