@page
@model controleJornadas.Pages.FuncionariosCrud.EditModel

@{
    ViewData["Title"] = "Alterar Funcionário";
}


<h4>Funcionários</h4>
<hr />
<!-- Adicione esta seção para exibir mensagens -->
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-danger">
        @TempData["Mensagem"]
    </div>
}



<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="funcionarios.id" />
            <div class="form-group">
                <label asp-for="funcionarios.nome" class="control-label"></label>
                <input asp-for="funcionarios.nome" class="form-control" />
                <span asp-validation-for="funcionarios.nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionarios.cargo" class="control-label"></label>
                <input asp-for="funcionarios.cargo" class="form-control" />
                <span asp-validation-for="funcionarios.cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionarios.dataAdmissao" class="control-label"></label>
                <input asp-for="funcionarios.dataAdmissao" class="form-control" />
                <span asp-validation-for="funcionarios.dataAdmissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="funcionarios.codPix" class="control-label"></label>
                <input asp-for="funcionarios.codPix" class="form-control" />
                <span asp-validation-for="funcionarios.codPix" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">

                <input type="submit" value="Salvar" class="btn btn-primary" /><a asp-page="./Index">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
