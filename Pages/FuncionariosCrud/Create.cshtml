@page
@model controleJornadas.Pages.FuncionariosCrud.CreateModel

@{
    ViewData["Title"] = "Novo Funcionário";
    Layout = "_Layout";
}

<h4>Funcionários</h4>
<hr />
<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <div>
            @if (this.Model.Erro)
            {
                <div class="alert alert-danger">@this.Model.Message</div>
            }

            @if (!this.Model.Erro && this.Model.Message is not null)
            {
                <div class="alert alert-success">@this.Model.Message</div>
            }
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Funcionario.Nome" class="control-label"></label>
                <input asp-for="Funcionario.Nome" class="form-control" />
                <span asp-validation-for="Funcionario.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.Cargo" class="control-label"></label>
                <input asp-for="Funcionario.Cargo" class="form-control" />
                <span asp-validation-for="Funcionario.Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.DataAdmissao" class="control-label"></label>
                <input asp-for="Funcionario.DataAdmissao" class="form-control" />
                <span asp-validation-for="Funcionario.DataAdmissao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.CodPix" class="control-label"></label>
                <input asp-for="Funcionario.CodPix" class="form-control" />
                <span asp-validation-for="Funcionario.CodPix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario.BaseId" class="control-label"></label>
                <select asp-for="Funcionario.BaseId"  class="form-control" asp-items="ViewBag.Bases"></select>
            </div>
            <br>
            <div class="form-group" style="display: flex;justify-content: space-between;">
                <input type="submit" value="Criar Funcionario" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-page="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
