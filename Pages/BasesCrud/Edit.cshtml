@page
@model controleJornadas.Pages.BasesCrud.EditModel
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

@{
    ViewData["Title"] = "Alterar Filial";
}


<h4>Alterar Filial @Model.Bases.Sigla</h4>
<hr />
<!-- Adicione esta seção para exibir mensagens -->
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-danger">
        @TempData["Mensagem"]
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bases.Id" />
            <div class="form-group">
                <label asp-for="Bases.Nome" class="control-label"></label>
                <input asp-for="Bases.Nome" class="form-control" />
                <span asp-validation-for="Bases.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bases.Cidade" class="control-label"></label>
                <input asp-for="Bases.Cidade" class="form-control" />
                <span asp-validation-for="Bases.Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bases.Sigla" class="control-label"></label>
                <input asp-for="Bases.Sigla" class="form-control" />
                <span asp-validation-for="Bases.Sigla" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> <a asp-page="./Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
