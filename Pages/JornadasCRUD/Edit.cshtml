@page
@model controleJornadas.Pages.JornadasCRUD.EditModel

@{
    ViewData["Title"] = "Alterar jornada";
    Layout = "_Layout";
}


<h4>Alterarando a Jornada: @Model.Jornadas.Id ?</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Jornadas.Id" />
            <div class="form-group">
                <label asp-for="Jornadas.HrInicio" class="control-label"></label>
                <input asp-for="Jornadas.HrInicio" class="form-control" />
                <span asp-validation-for="Jornadas.HrInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jornadas.HrFim" class="control-label"></label>
                <input asp-for="Jornadas.HrFim" class="form-control" />
                <span asp-validation-for="Jornadas.HrFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jornadas.Turno" class="control-label"></label>
                <input asp-for="Jornadas.Turno" class="form-control" />
                <span asp-validation-for="Jornadas.Turno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jornadas.Valor" class="control-label"></label>
                <input asp-for="Jornadas.Valor" class="form-control" />
                <span asp-validation-for="Jornadas.Valor" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
